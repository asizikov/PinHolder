<UserControl x:Class="PinHolder.Conrols.Locker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" 
          Background="{StaticResource PhoneBackgroundBrush}">
        <StackPanel x:Name="Pass" VerticalAlignment="Top" Orientation="Horizontal">
            <TextBox Tag="0" x:Name="zero"  Margin="12,12,0,12" Height="72" Width="72" InputScope="Number"/>
            <TextBox Tag="1" x:Name="one" Margin="12,12,0,12" Height="72" Width="72" InputScope="Number"/>
            <TextBox Tag="2" x:Name="two" Margin="12,12,0,12" Height="72" Width="72" InputScope="Number"/>
            <TextBox Tag="3" x:Name="three" Margin="12,12,0,12" Height="72" Width="72" InputScope="Number"/>
            <TextBox Tag="4" x:Name="four"  Margin="12,12,0,12" Height="72" Width="72" InputScope="Number"/>
        </StackPanel>
    </Grid>
</UserControl>
